{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v1.6.58/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('ConnectionStrings__db')"
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/api",
      "request-body-strict": false
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql",
      "allow-introspection": true
    },
    "host": {
      "authentication": {
        "provider": "StaticWebApps"
      },
      "mode": "development"
    }
  },
  "entities": {
    "Todo": {
      "source": {
        "object": "dbo.Todo",
        "type": "table",
        "key-fields": [
          "Id"
        ]
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "Todo",
          "plural": "Todos"
        }
      },
      "rest": {
        "enabled": true,
        "path": "/Todo"
      },
      "cache": {
        "enabled": true,
        "level": "L1L2"
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ],
      "mappings": {
        "Id": "Id",
        "Title": "Title",
        "IsCompleted": "IsCompleted",
        "CategoryId": "CategoryId"
      }
    },
    "Category": {
      "source": {
        "object": "dbo.Category",
        "type": "table",
        "key-fields": [
          "Id"
        ]
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "Category",
          "plural": "Categories"
        }
      },
      "rest": {
        "enabled": true,
        "path": "/Category"
      },
      "cache": {
        "enabled": true,
        "level": "L1L2"
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ],
      "mappings": {
        "Id": "Id",
        "Name": "Name"
      }
    }
  }
}